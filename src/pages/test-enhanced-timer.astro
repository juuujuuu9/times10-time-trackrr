---
import Layout from '../layouts/Layout.astro';
import { requireAuth } from '../utils/session';
import Timer from '../components/Timer';

// Require authentication
const user = await requireAuth('/')(Astro) as any;
---

<Layout title="Enhanced Timer Test - Times10 Time Tracker">
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Enhanced Timer Test</h1>
        <p class="text-lg text-gray-600">
          Test the new timer functionality with task selection and automatic time entry creation.
        </p>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Task Timer</h2>
        <Timer client:load />
      </div>

      <div class="mt-8 bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">How it works:</h3>
        <div class="space-y-3 text-sm text-gray-600">
          <div class="flex items-start">
            <span class="w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-medium mr-3 mt-0.5">1</span>
            <p>Select a task from the dropdown (only shows tasks assigned to you)</p>
          </div>
          <div class="flex items-start">
            <span class="w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-medium mr-3 mt-0.5">2</span>
            <p>Click "Start" to begin tracking time for that task</p>
          </div>
          <div class="flex items-start">
            <span class="w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-medium mr-3 mt-0.5">3</span>
            <p>Click "Stop" (red button) when you're done working on the task</p>
          </div>
          <div class="flex items-start">
            <span class="w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-medium mr-3 mt-0.5">4</span>
            <p>The time entry is automatically saved and appears in your recent time entries</p>
          </div>
        </div>
      </div>

      <div class="mt-8 text-center">
        <a 
          href="/dashboard" 
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</Layout>
