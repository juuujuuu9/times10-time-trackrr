      // Initialize week display
      updateWeekDisplay();


      // Time input handling
      const timeInputs = document.querySelectorAll('.time-input');
      
      timeInputs.forEach(input => {
        // Store the original value when the input is focused
        input.addEventListener('focus', function() {
          this.setAttribute('data-original-value', this.value);
        });
        
        // Handle Enter key press
        input.addEventListener('keydown', function(e) {
          if (e.key === 'Enter') {
            e.preventDefault();
            this.blur(); // Trigger the blur event to save
          }
        });
        
        input.addEventListener('blur', async function() {
          const entryId = this.getAttribute('data-entry-id');
          const timeType = this.getAttribute('data-time-type');
          const timeValue = this.value.trim();
          
          // Skip if empty or if it's the placeholder value
          if (!timeValue || timeValue === '--:-- --') return;
          
          // Skip if the value hasn't changed
          const originalValue = this.getAttribute('data-original-value');
          if (timeValue === originalValue) return;
          
          // Parse time using flexible parser
          const parsedTime = parseFlexibleTime(timeValue);
          if (!parsedTime) {
            // Show error state
            this.style.borderColor = '#EF4444';
            this.style.backgroundColor = '#FEF2F2';
            alert('Please enter a valid time format (e.g., 3p, 3:30pm, 12am, 300pm, etc.)');
            setTimeout(() => {
              this.style.borderColor = '';
              this.style.backgroundColor = '';
            }, 2000);
            this.focus();
            return;
          }
          
          try {
            // Get the current entry data to determine if this is a manual duration entry
            const row = this.closest('tr');
            const editBtn = row?.querySelector('.edit-time-entry-btn') as HTMLElement;
            const entryData = editBtn?.getAttribute('data-entry');
            let currentEntry = null;
            
            if (entryData) {
              try {
                currentEntry = JSON.parse(entryData);
              } catch (e) {
                console.error('Error parsing entry data:', e);
              }
            }
            
            // Get the task date from the current entry
            const taskDate = currentEntry?.startTime ? new Date(currentEntry.startTime) : new Date(currentEntry?.createdAt);
            
            // Use the parsed time (already in 24-hour format)
            const hours = parsedTime.hours;
            const minutes = parsedTime.minutes;
            
            // Use the unified API format with component hours/minutes
            const updateData: { startHours?: number; startMinutes?: number; endHours?: number; endMinutes?: number; taskDate?: string; tzOffsetMinutes?: number; durationManual?: number | null } = {};
            if (timeType === 'start') {
              updateData.startHours = hours;
              updateData.startMinutes = minutes;
            } else if (timeType === 'end') {
              updateData.endHours = hours;
              updateData.endMinutes = minutes;
            }
            updateData.taskDate = `${taskDate.getFullYear()}-${String(taskDate.getMonth()+1).padStart(2,'0')}-${String(taskDate.getDate()).padStart(2,'0')}`;
            updateData.tzOffsetMinutes = new Date().getTimezoneOffset();
            
            // If this was a manual duration entry and we're adding times, clear the manual duration
            if (currentEntry?.durationManual && !currentEntry?.endTime) {
              updateData.durationManual = null;
            }
            
            // Build a local datetime for validation
            const newDateTime = new Date(taskDate.getFullYear(), taskDate.getMonth(), taskDate.getDate(), hours, minutes, 0, 0);
            
            // Smart time validation for day-to-day usage
            function validateTimeEntry(newTime: Date, existingTime: Date, timeType: 'start' | 'end'): boolean {
              const newHours = newTime.getHours();
              const existingHours = existingTime.getHours();
              
              // Calculate time difference in hours
              const timeDiff = Math.abs(newTime.getTime() - existingTime.getTime());
              const hoursDiff = timeDiff / (1000 * 60 * 60);
              
              // For typical business hours (8am-10pm), assume same-day entries
              const isBusinessHours = (newHours >= 8 && newHours <= 22) && (existingHours >= 8 && existingHours <= 22);
              
              // For late night/early morning hours (10pm-8am), be more careful about day boundaries
              const isLateNight = (newHours >= 22 || newHours <= 8) || (existingHours >= 22 || existingHours <= 8);
              
              if (isBusinessHours) {
                // For business hours, be strict about time order but allow reasonable edits
                if (timeType === 'end' && newTime <= existingTime) {
                  // Only allow if the time difference is very small (likely same day, minor edit)
                  return hoursDiff <= 0.5; // Allow up to 30 minutes difference for business hours
                } else if (timeType === 'start' && newTime >= existingTime) {
                  // Only allow if the time difference is very small (likely same day, minor edit)
                  return hoursDiff <= 0.5; // Allow up to 30 minutes difference for business hours
                }
                return true; // Allow the change for business hours
              } else if (isLateNight) {
                // For late night entries, be more permissive but still validate obvious errors
                if (timeType === 'end' && newTime <= existingTime) {
                  return hoursDiff <= 1; // Allow up to 1 hour difference for late night
                } else if (timeType === 'start' && newTime >= existingTime) {
                  return hoursDiff <= 1; // Allow up to 1 hour difference for late night
                }
                return true; // Allow late night entries
              }
              
              // For other cases, use standard validation
              if (timeType === 'end' && newTime <= existingTime) {
                return false;
              } else if (timeType === 'start' && newTime >= existingTime) {
                return false;
              }
              
              return true;
            }
            
            // Validate that end time is after start time if both times are being set
            if (timeType === 'end' && currentEntry?.startTime) {
              const existingStartTime = new Date(currentEntry.startTime);
              if (!validateTimeEntry(newDateTime, existingStartTime, 'end')) {
                // Show error state
                this.style.borderColor = '#EF4444';
                this.style.backgroundColor = '#FEF2F2';
                alert('End time must be after start time');
                setTimeout(() => {
                  this.style.borderColor = '';
                  this.style.backgroundColor = '';
                }, 2000);
                this.focus();
                return;
              }
            } else if (timeType === 'start' && currentEntry?.endTime) {
              const existingEndTime = new Date(currentEntry.endTime);
              if (!validateTimeEntry(newDateTime, existingEndTime, 'start')) {
                // Show error state
                this.style.borderColor = '#EF4444';
                this.style.backgroundColor = '#FEF2F2';
                alert('Start time must be before end time');
                setTimeout(() => {
                  this.style.borderColor = '';
                  this.style.backgroundColor = '';
                }, 2000);
                this.focus();
                return;
              }
            }
            
            // Show loading state
            this.style.borderColor = '#3B82F6';
            this.style.backgroundColor = '#F0F9FF';
            
            const response = await fetch(`/api/time-entries-unified/${entryId}`, {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(updateData)
            });
            
            if (response.ok) {
              const result = await response.json();
              const row = this.closest('tr');
              
              // Update the duration cell
              const durationCell = row.querySelector('td:nth-child(8)'); // Duration column
              if (durationCell && result.data) {
                const duration = result.data.durationManual || result.data.duration || 0;
                durationCell.textContent = formatDuration(duration);
              }
              
              // Update the time input values to reflect the new data
              if (result.data) {
                const startTimeInput = row?.querySelector('input[data-time-type="start"]') as HTMLInputElement;
                const endTimeInput = row?.querySelector('input[data-time-type="end"]') as HTMLInputElement;
                
                if (startTimeInput && result.data.startTime) {
                  const startDate = new Date(result.data.startTime);
                  startTimeInput.value = new Intl.DateTimeFormat(undefined, { hour: '2-digit', minute: '2-digit', hour12: true }).format(startDate);
                } else if (startTimeInput && !result.data.startTime) {
                  startTimeInput.value = '--:-- --';
                }
                
                if (endTimeInput && result.data.endTime) {
                  const endDate = new Date(result.data.endTime);
                  endTimeInput.value = new Intl.DateTimeFormat(undefined, { hour: '2-digit', minute: '2-digit', hour12: true }).format(endDate);
                } else if (endTimeInput && !result.data.endTime) {
                  endTimeInput.value = '--:-- --';
                }
              }
              
              // Show success feedback
              this.style.borderColor = '#10B981';
              this.style.backgroundColor = '#F0FDF4';
              setTimeout(() => {
                this.style.borderColor = '';
                this.style.backgroundColor = '';
              }, 1500);
            } else {
              const error = await response.json();
              
              if (response.status === 401) {
                // Authentication error - redirect to login
                alert('Your session has expired. Please log in again.');
                window.location.href = '/login';
                return;
              }
              
              // Show error state
              this.style.borderColor = '#EF4444';
              this.style.backgroundColor = '#FEF2F2';
              alert(`Error: ${error.error}`);
              setTimeout(() => {
                this.style.borderColor = '';
                this.style.backgroundColor = '';
              }, 2000);
              // Reset to original value on error
              this.focus();
            }
          } catch (error) {
            console.error('Error updating time:', error);
            // Reset styling on error
            this.style.borderColor = '';
            this.style.backgroundColor = '';
            console.error('Error updating time. Please check your input and try again.');
            this.focus();
