---
import Layout from '../../layouts/AdminLayout.astro';
---

<Layout title="Generate Test Data">
  <div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Generate Test Data</h1>
      
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Warning</h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p>This action will <strong>completely clear all existing data</strong> and generate new test data. This cannot be undone!</p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">What will be generated:</h3>
            <div class="mt-2 text-sm text-blue-700">
              <ul class="list-disc list-inside space-y-1">
                <li>6 users (5 active, 1 inactive) with realistic roles and pay rates</li>
                <li>5 clients (4 active, 1 archived)</li>
                <li>10 projects across different clients</li>
                <li>25+ tasks with various statuses (completed, in progress, pending)</li>
                <li>Task assignments for all active users</li>
                <li>30+ days of realistic time entries with ongoing tasks</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="flex space-x-4">
        <button
          id="generateBtn"
          class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200 flex items-center space-x-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <span>Generate Test Data</span>
        </button>
        
        <a
          href="/admin"
          class="bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200"
        >
          Cancel
        </a>
      </div>

      <div id="status" class="mt-6 hidden">
        <div class="bg-gray-50 border border-gray-200 rounded-md p-4">
          <div class="flex items-center space-x-3">
            <div id="spinner" class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
            <div>
              <p id="statusText" class="text-sm font-medium text-gray-900">Generating test data...</p>
              <p class="text-sm text-gray-500">This may take a few moments</p>
            </div>
          </div>
        </div>
      </div>

      <div id="result" class="mt-6 hidden">
        <div id="successResult" class="bg-green-50 border border-green-200 rounded-md p-4 hidden">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">Success!</h3>
              <div class="mt-2 text-sm text-green-700">
                <p id="successMessage">Test data has been generated successfully!</p>
              </div>
            </div>
          </div>
        </div>

        <div id="errorResult" class="bg-red-50 border border-red-200 rounded-md p-4 hidden">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Error</h3>
              <div class="mt-2 text-sm text-red-700">
                <p id="errorMessage">Failed to generate test data</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.getElementById('generateBtn')?.addEventListener('click', async function() {
    const button = this as HTMLButtonElement;
    const status = document.getElementById('status');
    const result = document.getElementById('result');
    const successResult = document.getElementById('successResult');
    const errorResult = document.getElementById('errorResult');
    const statusText = document.getElementById('statusText');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');

    // Disable button and show status
    button.disabled = true;
    button.innerHTML = `
      <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      <span>Generating...</span>
    `;
    
    status?.classList.remove('hidden');
    result?.classList.add('hidden');

    try {
      const response = await fetch('/api/generate-test-data', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      });

      const data = await response.json();

      if (data.success) {
        successMessage!.textContent = data.message;
        successResult?.classList.remove('hidden');
        errorResult?.classList.add('hidden');
        
        // Redirect to admin dashboard after 2 seconds
        setTimeout(() => {
          window.location.href = '/admin';
        }, 2000);
      } else {
        errorMessage!.textContent = data.message || 'An error occurred';
        errorResult?.classList.remove('hidden');
        successResult?.classList.add('hidden');
      }
    } catch (error) {
      errorMessage!.textContent = 'Network error occurred';
      errorResult?.classList.remove('hidden');
      successResult?.classList.add('hidden');
    } finally {
      // Hide status and show result
      status?.classList.add('hidden');
      result?.classList.remove('hidden');
      
      // Reset button
      (button as HTMLButtonElement).disabled = false;
      button.innerHTML = `
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
        <span>Generate Test Data</span>
      `;
    }
  });
</script> 