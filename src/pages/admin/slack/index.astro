---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { requireRole } from '../../../utils/session';
import { db } from '../../../db';
import { slackWorkspaces, slackUsers, users } from '../../../db/schema';
import { eq, desc } from 'drizzle-orm';

// Require admin role
const user = await requireRole('admin', '/admin')(Astro);

// Get Slack workspaces
const workspaces = await db
  .select()
  .from(slackWorkspaces)
  .orderBy(desc(slackWorkspaces.createdAt));

// Get Slack users with their linked accounts
const slackUsersList = await db
  .select({
    id: slackUsers.id,
    userId: slackUsers.userId,
    slackUserId: slackUsers.slackUserId,
    workspaceId: slackUsers.workspaceId,
    slackUsername: slackUsers.slackUsername,
    slackEmail: slackUsers.slackEmail,
    accessToken: slackUsers.accessToken,
    createdAt: slackUsers.createdAt,
    updatedAt: slackUsers.updatedAt,
    user: {
      id: users.id,
      name: users.name,
      email: users.email,
      role: users.role,
      status: users.status
    }
  })
  .from(slackUsers)
  .innerJoin(users, eq(slackUsers.userId, users.id))
  .orderBy(desc(slackUsers.createdAt));

const slackClientId = import.meta.env.SLACK_CLIENT_ID;
const baseUrl = import.meta.env.PUBLIC_SITE_URL || import.meta.env.BASE_URL || 'https://trackr.times10.net';
---

<AdminLayout title="Slack Integration - Admin">
  <div class="p-6">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Slack Integration</h1>
      <p class="text-gray-600">Manage Slack workspace connections and user linking</p>
    </div>

    <!-- Install Slack App -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Install Slack App</h2>
      
      {slackClientId ? (
        <div class="space-y-4">
          <p class="text-gray-600">
            Install the Times10 Time Tracker app to your Slack workspace to enable time tracking commands.
          </p>
          
          <a 
            href={`https://slack.com/oauth/v2/authorize?client_id=${slackClientId}&scope=commands,chat:write,users:read,users:read.email&redirect_uri=${encodeURIComponent(`${baseUrl}/api/slack/oauth`)}`}
            class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6 15a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm6-8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm6 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 2a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"/>
            </svg>
            Add to Slack
          </a>
          
          <div class="text-sm text-gray-500">
            <p>This will install the following Slack commands:</p>
            <ul class="list-disc list-inside mt-2 space-y-1">
              <li><code>/track</code> - Record time for a task</li>
              <li><code>/tasks</code> - View your assigned tasks</li>
              <li><code>/status</code> - View today's time tracking summary</li>
            </ul>
          </div>
        </div>
      ) : (
        <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Slack configuration missing</h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p>Please set the <code>SLACK_CLIENT_ID</code> and <code>SLACK_CLIENT_SECRET</code> environment variables to enable Slack integration.</p>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>

    <!-- Connected Workspaces -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Connected Workspaces</h2>
      
      {workspaces.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Workspace</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Workspace ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Connected Users</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Installed</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {workspaces.map((workspace) => {
                const workspaceUsers = slackUsersList.filter(su => su.workspaceId === workspace.workspaceId);
                return (
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      {workspace.workspaceName}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {workspace.workspaceId}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {workspaceUsers.length} users
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {new Date(workspace.createdAt).toLocaleDateString()}
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      ) : (
        <p class="text-gray-500">No workspaces connected yet.</p>
      )}
    </div>

    <!-- Linked Users -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Linked Users</h2>
      
      {slackUsersList.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Slack Username</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Workspace</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Linked</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {slackUsersList.map((slackUser) => {
                const workspace = workspaces.find(w => w.workspaceId === slackUser.workspaceId);
                return (
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="text-sm font-medium text-gray-900">
                          {slackUser.user.name}
                        </div>
                        <div class="text-sm text-gray-500 ml-2">
                          {slackUser.user.email}
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {slackUser.slackUsername || slackUser.slackUserId}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {workspace?.workspaceName || slackUser.workspaceId}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {new Date(slackUser.createdAt).toLocaleDateString()}
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      ) : (
        <p class="text-gray-500">No users have linked their Slack accounts yet.</p>
      )}
    </div>
  </div>
</AdminLayout>
