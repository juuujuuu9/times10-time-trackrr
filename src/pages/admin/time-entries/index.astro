        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex flex-col">
            <label for="startDate" class="block text-xs text-gray-400 mb-1">Start Date</label>
            <input
              type="date"
              id="startDate"
              class="w-[calc(100%-3rem)] px-3 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 bg-gray-700 text-white text-sm"
