          if (currentClientId) {
            await loadProjects(currentClientId, false);
            await updateProjectCounter(currentClientId);
          }
        } else {
          alert('Error creating project');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error creating project');
      }
    };



