---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { requireRole } from '../../utils/session';

// Get current user
const user = await requireRole('admin', '/dashboard')(Astro) as any;
---

<AdminLayout title="Dashboard" currentPage="dashboard">
  <div class="space-y-8">
    <!-- Welcome Header -->
    <div class="bg-gradient-to-r from-gray-700 to-gray-600 rounded-xl shadow-lg p-8 text-white">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold mb-2">Welcome back, {user?.name ? user.name.split(' ')[0] : 'Admin'}! 👋</h1>
          <p class="text-gray-200 text-lg">Manage your time tracking system and monitor activity</p>
          <p class="text-gray-300 text-sm mt-2">Logged in as: {user?.email || 'Unknown'}</p>
        </div>
        <div class="text-right">
          <div class="text-4xl mb-2">📊</div>
          <div class="text-sm text-gray-200">Dashboard Overview</div>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl">
            <span class="text-2xl text-white">👤</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Total Team Members</p>
            <p class="text-3xl font-bold text-white" id="user-count">-</p>
            <div class="flex items-center mt-1">
              <span class="text-gray-300 text-sm">↗</span>
              <span class="text-gray-300 text-xs ml-1">+12%</span>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl">
            <span class="text-2xl text-white">👥</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Total Clients</p>
            <p class="text-3xl font-bold text-white" id="client-count">-</p>
            <div class="flex items-center mt-1">
              <span class="text-gray-300 text-sm">↗</span>
              <span class="text-gray-300 text-xs ml-1">+8%</span>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl">
            <span class="text-2xl text-white">📁</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Total Projects</p>
            <p class="text-3xl font-bold text-white" id="project-count">-</p>
            <div class="flex items-center mt-1">
              <span class="text-gray-300 text-sm">↗</span>
              <span class="text-gray-300 text-xs ml-1">+15%</span>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl">
            <span class="text-2xl text-white">✅</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Total Tasks</p>
            <p class="text-3xl font-bold text-white" id="task-count">-</p>
            <div class="flex items-center mt-1">
              <span class="text-gray-300 text-sm">↗</span>
              <span class="text-gray-300 text-xs ml-1">+23%</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-gray-800 to-gray-700 border-b border-gray-700">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-gray-600 rounded-lg flex items-center justify-center mr-3">
              <span class="text-white text-xl">⏱️</span>
            </div>
            <h3 class="text-xl font-semibold text-white">Recent Time Entries</h3>
          </div>
          <a href="/admin/time-entries" class="text-gray-300 hover:text-white font-medium text-sm">
            View All →
          </a>
        </div>
      </div>
      <div class="p-6">
        <div id="recent-entries" class="space-y-4">
          <div class="text-center py-12">
            <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-gray-400 text-2xl">⏱️</span>
            </div>
            <p class="text-gray-300 text-lg font-medium">Loading recent time entries...</p>
            <p class="text-gray-500 text-sm mt-1">Please wait while we fetch the data</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <a href="/admin/clients" class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105 group">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl group-hover:scale-110 transition-transform duration-200">
            <span class="text-2xl text-white">👥</span>
          </div>
          <div class="ml-4">
            <h3 class="font-semibold text-white text-lg">Manage Clients</h3>
            <p class="text-sm text-gray-400 mt-1">Add, edit, and organize clients</p>
            <div class="flex items-center mt-2 text-gray-300 text-sm font-medium">
              <span>Get Started</span>
              <span class="ml-1 group-hover:translate-x-1 transition-transform">→</span>
            </div>
          </div>
        </div>
      </a>

      <a href="/admin/projects" class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105 group">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl group-hover:scale-110 transition-transform duration-200">
            <span class="text-2xl text-white">📁</span>
          </div>
          <div class="ml-4">
            <h3 class="font-semibold text-white text-lg">Manage Projects</h3>
            <p class="text-sm text-gray-400 mt-1">Create and organize projects</p>
            <div class="flex items-center mt-2 text-gray-300 text-sm font-medium">
              <span>Get Started</span>
              <span class="ml-1 group-hover:translate-x-1 transition-transform">→</span>
            </div>
          </div>
        </div>
      </a>

      <a href="/admin/reports" class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105 group">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl group-hover:scale-110 transition-transform duration-200">
            <span class="text-2xl text-white">📈</span>
          </div>
          <div class="ml-4">
            <h3 class="font-semibold text-white text-lg">View Reports</h3>
            <p class="text-sm text-gray-400 mt-1">Analyze time tracking data</p>
            <div class="flex items-center mt-2 text-gray-300 text-sm font-medium">
              <span>Get Started</span>
              <span class="ml-1 group-hover:translate-x-1 transition-transform">→</span>
            </div>
          </div>
        </div>
      </a>

      <a href="/admin/generate-data" class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 p-6 hover:shadow-lg transition-all duration-200 transform hover:scale-105 group">
        <div class="flex items-center">
          <div class="p-3 bg-gradient-to-r from-gray-600 to-gray-500 rounded-xl group-hover:scale-110 transition-transform duration-200">
            <span class="text-2xl text-white">🧪</span>
          </div>
          <div class="ml-4">
            <h3 class="font-semibold text-white text-lg">Generate Test Data</h3>
            <p class="text-sm text-gray-400 mt-1">Create realistic sample data</p>
            <div class="flex items-center mt-2 text-gray-300 text-sm font-medium">
              <span>Get Started</span>
              <span class="ml-1 group-hover:translate-x-1 transition-transform">→</span>
            </div>
          </div>
        </div>
      </a>
    </div>

    <!-- System Status -->
    <div class="bg-gray-800 rounded-xl shadow-sm border border-gray-700 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-gray-800 to-gray-700 border-b border-gray-700">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-gray-600 rounded-lg flex items-center justify-center mr-3">
            <span class="text-white text-xl">🟢</span>
          </div>
          <h3 class="text-xl font-semibold text-white">System Status</h3>
        </div>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="flex items-center p-4 bg-gray-700 rounded-lg border border-gray-600">
            <div class="w-3 h-3 bg-gray-400 rounded-full mr-3 animate-pulse"></div>
            <div>
              <p class="font-medium text-white">Database</p>
              <p class="text-sm text-gray-300" id="db-status">Checking...</p>
            </div>
          </div>
          <div class="flex items-center p-4 bg-gray-700 rounded-lg border border-gray-600">
            <div class="w-3 h-3 bg-gray-400 rounded-full mr-3 animate-pulse"></div>
            <div>
              <p class="font-medium text-white">API</p>
              <p class="text-sm text-gray-300" id="api-status">Checking...</p>
            </div>
          </div>
          <div class="flex items-center p-4 bg-gray-700 rounded-lg border border-gray-600">
            <div class="w-3 h-3 bg-gray-400 rounded-full mr-3 animate-pulse"></div>
            <div>
              <p class="font-medium text-white">Services</p>
              <p class="text-sm text-gray-300" id="service-status">Checking...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  // Load dashboard data
  async function loadDashboardData() {
    try {
      // Test database connection
      const dbResponse = await fetch('/api/test-db');
      if (dbResponse.ok) {
        const dbData = await dbResponse.json();
        
        // Update counts
        const userCountEl = document.getElementById('user-count');
        const clientCountEl = document.getElementById('client-count');
        const projectCountEl = document.getElementById('project-count');
        const taskCountEl = document.getElementById('task-count');
        
        if (userCountEl) userCountEl.textContent = dbData.counts.users;
        if (clientCountEl) clientCountEl.textContent = dbData.counts.clients;
        if (projectCountEl) projectCountEl.textContent = dbData.counts.projects;
        if (taskCountEl) taskCountEl.textContent = dbData.counts.tasks;
        
        // Update recent entries
        const recentEntriesContainer = document.getElementById('recent-entries');
        if (recentEntriesContainer) {
          if (dbData.data.timeEntries.length > 0) {
            recentEntriesContainer.innerHTML = dbData.data.timeEntries.slice(0, 5).map((entry: any) => `
              <div class="flex items-center justify-between p-4 bg-gradient-to-r from-gray-700 to-gray-600 rounded-xl border border-gray-600 hover:shadow-md transition-all duration-200">
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-gray-600 rounded-lg flex items-center justify-center mr-4">
                    <span class="text-white text-lg">👤</span>
                  </div>
                  <div>
                    <p class="font-semibold text-white">${entry.userName || 'Unknown Team Member'}</p>
                    <p class="text-sm text-gray-300">
                      ${entry.taskName || 'Unknown Task'} • ${entry.projectName || 'Unknown Project'}
                    </p>
                    ${entry.notes ? `<p class="text-sm text-gray-400 mt-1 italic">"${entry.notes}"</p>` : ''}
                  </div>
                </div>
                <div class="text-right">
                  <div class="bg-gray-600 px-3 py-1 rounded-lg border border-gray-500">
                    <p class="text-sm font-medium text-white">
                      ${new Date(entry.startTime).toLocaleDateString()}
                    </p>
                    <p class="text-xs text-gray-300">
                      ${new Date(entry.startTime).toLocaleTimeString()}
                    </p>
                  </div>
                </div>
              </div>
            `).join('');
          } else {
            recentEntriesContainer.innerHTML = `
              <div class="text-center py-12">
                <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-gray-400 text-2xl">⏱️</span>
                </div>
                <p class="text-gray-300 text-lg font-medium">No recent time entries</p>
                <p class="text-gray-500 text-sm mt-1">Time entries will appear here as team members track their work</p>
              </div>
            `;
          }
        }
        
        // Update status indicators
        const dbStatusEl = document.getElementById('db-status');
        const apiStatusEl = document.getElementById('api-status');
        const serviceStatusEl = document.getElementById('service-status');
        
        if (dbStatusEl) dbStatusEl.textContent = 'Connected';
        if (apiStatusEl) apiStatusEl.textContent = 'Online';
        if (serviceStatusEl) serviceStatusEl.textContent = 'Running';
      } else {
        throw new Error('Database connection failed');
      }
    } catch (error) {
      console.error('Error loading dashboard data:', error);
      
      // Update status indicators to show error
      const dbStatusEl = document.getElementById('db-status');
      const apiStatusEl = document.getElementById('api-status');
      const serviceStatusEl = document.getElementById('service-status');
      const recentEntriesContainer = document.getElementById('recent-entries');
      
      if (dbStatusEl) {
        dbStatusEl.textContent = 'Error';
        dbStatusEl.className = 'text-sm text-red-500';
      }
      if (apiStatusEl) {
        apiStatusEl.textContent = 'Error';
        apiStatusEl.className = 'text-sm text-red-500';
      }
      if (serviceStatusEl) {
        serviceStatusEl.textContent = 'Error';
        serviceStatusEl.className = 'text-sm text-red-500';
      }
      
      // Show error message
      if (recentEntriesContainer) {
        recentEntriesContainer.innerHTML = `
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
            <strong>⚠️ Database Connection Error!</strong> 
            <p class="mt-1">Unable to connect to the database. Please check your configuration.</p>
          </div>
        `;
      }
    }
  }

  // Load data when page loads
  document.addEventListener('DOMContentLoaded', loadDashboardData);
</script> 