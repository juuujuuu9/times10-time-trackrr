---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { db } from '../../db/index';
import { users, clients, projects, tasks, timeEntries } from '../../db/schema';
import { count, sql } from 'drizzle-orm';

// Initialize stats with error handling
let userCount = [{ count: 0 }];
let clientCount = [{ count: 0 }];
let projectCount = [{ count: 0 }];
let taskCount = [{ count: 0 }];
let recentTimeEntries: any[] = [];
let dbError = false;

try {
  // Test database connection first
  await db.select().from(users).limit(1);
  
  // If connection works, get dashboard stats
  userCount = await db.select({ count: count() }).from(users);
  clientCount = await db.select({ count: count() }).from(clients);
  projectCount = await db.select({ count: count() }).from(projects);
  taskCount = await db.select({ count: count() }).from(tasks);

  // Get recent time entries
  recentTimeEntries = await db
    .select({
      id: timeEntries.id,
      startTime: timeEntries.startTime,
      endTime: timeEntries.endTime,
      notes: timeEntries.notes,
      userName: users.name,
      taskName: tasks.name,
      projectName: projects.name,
    })
    .from(timeEntries)
    .innerJoin(users, sql`${timeEntries.userId} = ${users.id}`)
    .innerJoin(tasks, sql`${timeEntries.taskId} = ${tasks.id}`)
    .innerJoin(projects, sql`${tasks.projectId} = ${projects.id}`)
    .orderBy(sql`${timeEntries.startTime} DESC`)
    .limit(5);
} catch (error: any) {
  console.error('Database connection error:', error);
  dbError = true;
}
