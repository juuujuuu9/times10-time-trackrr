    let editUserDropdownOpen = false;

    // Load current team members for edit modal
    async function loadCurrentTeamMembers(teamId: number) {
      try {
        const response = await fetch(`/api/collaborations/${teamId}/members`);
        if (response.ok) {
          const data = await response.json();
          currentEditMembers = data.data || [];
          renderCurrentMembers();
        }
      } catch (error) {
        console.error('Error loading current team members:', error);
      }
    }

    // Render current team members in edit modal
    function renderCurrentMembers() {
      const container = document.getElementById('editCurrentMembers');
      if (!container) return;

      if (currentEditMembers.length === 0) {
        container.innerHTML = '<div class="text-sm text-gray-500">No team members</div>';
        return;
      }

      let html = '';
      currentEditMembers.forEach((member: any) => {
        const isCreator = member.role === 'lead';
        html += `
          <div class="flex items-center justify-between bg-gray-50 px-3 py-2 rounded-md">
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-gray-500 rounded-full flex items-center justify-center text-white text-sm font-medium">
                ${member.name.charAt(0).toUpperCase()}
              </div>
              <div>
