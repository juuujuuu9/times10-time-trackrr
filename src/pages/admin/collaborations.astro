<!-- Dialogue System -->
<script src="/src/components/DialogueSystem.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {

    // Handle Delete Collaboration button clicks
    const deleteButtons = document.querySelectorAll('.delete-collaboration-btn');
    deleteButtons.forEach(button => {
      button.addEventListener('click', async function(e) {
        e.preventDefault();
        
        const target = e.target as HTMLButtonElement;
        const teamId = target.getAttribute('data-team-id');
        const teamName = target.getAttribute('data-team-name');
        
        // Show confirmation dialog using DialogueSystem
        const confirmed = await window.DialogueSystem.confirm(
          'Delete Collaboration',
          `Are you sure you want to delete the collaboration "${teamName}"?\n\nThis action cannot be undone and will remove all team members and associated data.`,
          'Delete Collaboration',
          'Cancel'
        );
        
        if (!confirmed) {
          return;
        }
        
        // Show loading state
        const originalText = target.innerHTML;
        target.innerHTML = `
          <svg class="w-4 h-4 mr-1 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Deleting...
        `;
        target.disabled = true;
        
        try {
          const response = await fetch(`/api/admin/collaborations/${teamId}`, {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json',
            },
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Show success message and reload page
            await window.DialogueSystem.success(
              'Success',
              'Collaboration deleted successfully!'
            );
            window.location.reload();
          } else {
            // Show error message
            await window.DialogueSystem.error(
              'Error',
              `Failed to delete collaboration: ${result.message || 'Unknown error'}`
            );
            // Restore button state
            target.innerHTML = originalText;
            target.disabled = false;
          }
        } catch (error) {
          console.error('Error deleting collaboration:', error);
          await window.DialogueSystem.error(
            'Error',
            'Error deleting collaboration. Please try again.'
          );
          // Restore button state
          target.innerHTML = originalText;
          target.disabled = false;
        }
      });
    });
  });
</script>
