{
  "display_information": {
    "name": "Times10 Time Tracker",
    "description": "Track time and manage tasks directly from Slack",
    "long_description": "Times10 Time Tracker allows you to record time entries, view assigned tasks, and check your daily time tracking summary directly from Slack. Use slash commands to stay on top of your time tracking without leaving your workspace.",
    "background_color": "#2eb67d"
  },
  "features": {
    "bot_user": {
      "display_name": "Times10 Time Tracker",
      "always_online": false
    },
    "slash_commands": [
      {
        "command": "/track-time",
        "url": "https://your-vercel-domain.vercel.app/api/slack/commands",
        "description": "Record time for a task",
        "usage_hint": "task_id duration [notes]",
        "should_escape": false
      },
      {
        "command": "/my-tasks",
        "url": "https://your-vercel-domain.vercel.app/api/slack/commands",
        "description": "View your assigned tasks",
        "usage_hint": "(no parameters needed)",
        "should_escape": false
      },
      {
        "command": "/time-status",
        "url": "https://your-vercel-domain.vercel.app/api/slack/commands",
        "description": "View today's time tracking summary",
        "usage_hint": "(no parameters needed)",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "users:read",
        "users:read.email"
      ]
    },
    "redirect_urls": [
      "https://your-vercel-domain.vercel.app/api/slack/oauth"
    ]
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false,
    "interactivity": {
      "is_enabled": false
    },
    "event_subscriptions": {
      "request_url": "https://your-vercel-domain.vercel.app/api/slack/events",
      "bot_events": []
    }
  }
}
